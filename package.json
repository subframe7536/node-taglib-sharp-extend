{
  "name": "node-taglib-sharp-extend",
  "type": "module",
  "version": "0.4.0",
  "description": "read and write audio file metadata in nodejs / browser(memory)",
  "author": "subframe7536",
  "license": "LGPL-3.0-or-later",
  "repository": "https://github.com/subframe7536/node-taglib-sharp-memory",
  "keywords": [
    "music-metadata"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./vite": {
      "require": "./dist/vite.cjs",
      "import": "./dist/vite.mjs"
    },
    "./package.json": "./package.json",
    "./buffer": "./polyfills/buffer-es6.js",
    "./string-decoder": "./polyfills/string-decoder.js"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "typesVersions": {
    "*": {
      "vite": [
        "./dist/vite.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "polyfills"
  ],
  "engines": {
    "node": ">=16.7.0"
  },
  "scripts": {
    "format": "eslint . --fix",
    "dev": "tsdown --stub --watch",
    "build": "tsdown",
    "play": "cd ./playground && pnpm run dev",
    "release": "pnpm run build && bumpp --all && npm publish",
    "test": "pnpm run build && vitest --run"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "exports": {
      ".": {
        "require": "./dist/index.cjs",
        "import": "./dist/index.mjs"
      },
      "./vite": {
        "require": "./dist/vite.cjs",
        "import": "./dist/vite.mjs"
      },
      "./package.json": "./package.json",
      "./fs": "./polyfills/empty.js",
      "./buffer": "./polyfills/buffer-es6.js",
      "./string-decoder": "./polyfills/string-decoder.js"
    }
  },
  "peerDependencies": {
    "magic-string": ">=0.30"
  },
  "peerDependenciesMeta": {
    "magic-string": {
      "optional": true
    }
  },
  "dependencies": {
    "@subframe7536/iconv-lite": "^0.8.1",
    "buffer-es6": "^4.9.3",
    "text-decoder": "^1.2.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@subframe7536/eslint-config": "^1.3.2",
    "@subframe7536/type-utils": "^0.2.0",
    "@types/node": "^22.18.6",
    "@vitest/eslint-plugin": "^1.5.2",
    "bumpp": "^10.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-solid": "^0.14.5",
    "fast-base64": "^0.1.8",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.3",
    "unplugin-inline-enum": "^0.6.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
